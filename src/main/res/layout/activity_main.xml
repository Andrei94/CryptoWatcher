<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="10sp"
	tools:context=".MainActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingStart="10sp"
		android:paddingEnd="10sp">

		<TextView
			android:id="@+id/btcLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bitcoin_price"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/btc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/btcPercentChange"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:textSize="24sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingStart="10sp"
		android:paddingEnd="10sp">

		<TextView
			android:id="@+id/ethLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/eth_price"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/eth"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/ethPercentChange"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:textSize="24sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingStart="10sp"
		android:paddingEnd="10sp"
		android:layout_marginBottom="50sp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/xrpLabel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/xrp_price"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/xrp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="24sp"
			android:layout_marginEnd="30sp"/>

		<TextView
			android:id="@+id/xrpPercentChange"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="end"
			android:textSize="24sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:lines="2"
			android:onClick="updatePrices"
			android:text="@string/update_prices"
			android:textSize="24sp" />
	</LinearLayout>
</LinearLayout>